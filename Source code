#include <stdio.h>
#include <stdlib.h>

void main()
{
    int i,n,A[5]={5,10,6,0,4};
    int B[5];
        for (n=0;n<5;n++){
        B[n]=A[n];
        printf("%d ",A[n]);}
        printf("\n");
        for (i=5;i--;i>=0)
        if(B[i]%2==0 && B[i]>0)
        {
        B[i]=A[i];
        printf("%d ",B[i]);}
return 0;
}
